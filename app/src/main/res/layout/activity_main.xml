<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <TextView
        android:id="@+id/resultsTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="end"
        android:text="0"
        android:textSize="100sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/split"
        android:textColor="@color/white"
        android:background="@color/black"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/clear"
        app:layout_constraintTop_toBottomOf="@+id/resultsTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/split"
        app:layout_constraintBottom_toTopOf="@id/versus"
        android:text="C"
        android:backgroundTint="#FFCC00"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_margin="5dp"
        app:cornerRadius="10dp"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/split"
        app:layout_constraintTop_toBottomOf="@+id/resultsTextView"
        app:layout_constraintStart_toEndOf="@+id/number9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/versus"
        android:text="/"
        android:backgroundTint="#FFCC00"
        android:layout_margin="5dp"
        app:cornerRadius="10dp"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/number7"
        app:layout_constraintTop_toBottomOf="@+id/split"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/number8"
        app:layout_constraintBottom_toTopOf="@id/minus"
        android:text="7"
        android:backgroundTint="#FFCC00"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_margin="5dp"
        app:cornerRadius="10dp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/number8"
        app:layout_constraintTop_toBottomOf="@+id/split"
        app:layout_constraintStart_toEndOf="@+id/number7"
        app:layout_constraintEnd_toStartOf="@+id/number9"
        app:layout_constraintBottom_toTopOf="@id/minus"
        android:text="8"
        android:backgroundTint="#FFCC00"
        android:layout_margin="5dp"
        app:cornerRadius="10dp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/number9"
        app:layout_constraintTop_toBottomOf="@+id/split"
        app:layout_constraintStart_toEndOf="@+id/number8"
        app:layout_constraintEnd_toStartOf="@id/versus"
        app:layout_constraintBottom_toTopOf="@id/minus"
        android:text="9"
        android:backgroundTint="#FFCC00"
        android:layout_margin="5dp"
        app:cornerRadius="10dp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/versus"
        app:layout_constraintTop_toBottomOf="@+id/split"
        app:layout_constraintStart_toEndOf="@+id/number9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/minus"
        android:text="X"
        android:backgroundTint="#FFCC00"
        android:layout_margin="5dp"
        app:cornerRadius="10dp"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/number4"
        app:layout_constraintTop_toBottomOf="@+id/versus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/number5"
        app:layout_constraintBottom_toTopOf="@id/plus"
        android:text="4"
        android:backgroundTint="#FFCC00"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_margin="5dp"
        app:cornerRadius="10dp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/number5"
        app:layout_constraintTop_toBottomOf="@+id/versus"
        app:layout_constraintStart_toEndOf="@+id/number4"
        app:layout_constraintEnd_toStartOf="@+id/number6"
        app:layout_constraintBottom_toTopOf="@id/plus"
        android:text="5"
        android:backgroundTint="#FFCC00"
        android:layout_margin="5dp"
        app:cornerRadius="10dp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/number6"
        app:layout_constraintTop_toBottomOf="@+id/versus"
        app:layout_constraintStart_toEndOf="@+id/number5"
        app:layout_constraintEnd_toStartOf="@id/minus"
        app:layout_constraintBottom_toTopOf="@id/plus"
        android:text="6"
        android:backgroundTint="#FFCC00"
        android:layout_margin="5dp"
        app:cornerRadius="10dp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/minus"
        app:layout_constraintTop_toBottomOf="@+id/versus"
        app:layout_constraintStart_toEndOf="@+id/number6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/plus"
        android:text="-"
        android:backgroundTint="#FFCC00"
        android:layout_margin="5dp"
        app:cornerRadius="10dp"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/number1"
        app:layout_constraintTop_toBottomOf="@+id/minus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/number2"
        app:layout_constraintBottom_toTopOf="@id/equal"
        android:text="1"
        android:backgroundTint="#FFCC00"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_margin="5dp"
        app:cornerRadius="10dp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/number2"
        app:layout_constraintTop_toBottomOf="@+id/minus"
        app:layout_constraintStart_toEndOf="@+id/number1"
        app:layout_constraintEnd_toStartOf="@+id/number3"
        app:layout_constraintBottom_toTopOf="@id/equal"
        android:text="2"
        android:backgroundTint="#FFCC00"
        android:layout_margin="5dp"
        app:cornerRadius="10dp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/number3"
        app:layout_constraintTop_toBottomOf="@+id/minus"
        app:layout_constraintStart_toEndOf="@+id/number2"
        app:layout_constraintEnd_toStartOf="@id/plus"
        app:layout_constraintBottom_toTopOf="@id/equal"
        android:text="3"
        android:backgroundTint="#FFCC00"
        android:layout_margin="5dp"
        app:cornerRadius="10dp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/plus"
        app:layout_constraintTop_toBottomOf="@+id/minus"
        app:layout_constraintStart_toEndOf="@+id/number3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/equal"
        android:text="+"
        android:backgroundTint="#FFCC00"
        android:layout_margin="5dp"
        app:cornerRadius="10dp"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/number0"
        app:layout_constraintTop_toBottomOf="@+id/plus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/equal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="0"
        android:backgroundTint="#FFCC00"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_margin="5dp"
        app:cornerRadius="10dp"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/equal"
        app:layout_constraintTop_toBottomOf="@+id/plus"
        app:layout_constraintStart_toEndOf="@+id/number9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="="
        android:backgroundTint="#FFCC00"
        android:layout_margin="5dp"
        app:cornerRadius="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>